<nav id="top-nav" class="navbar navbar-default">
  <div class="container-fluid">

    <div class="navbar-right">
      <% @taxons = @taxon && @taxon.parent ? @taxon.parent.children : Spree::Taxon.roots %>
      <%= form_tag spree.products_path, :method => :get, class: "navbar-form" do %>
        <div class="input-group">
          <%= search_field_tag :keywords, params[:keywords], :placeholder => Spree.t(:search), class: "form-control" %>
          <span class="input-group-btn">
            <%= button_tag(type: "submit", :name => nil, class: "btn btn-default", name: "commit", value: "conceal") do %>
            <span class="glyphicon glyphicon-search"></span>
            <% end %> 
          </span>
        </div>
      <% end %>
    </div>

        <ul class="nav navbar-nav navbar-right">
          <li>
            <% if spree_current_user %>
            <li><%= link_to Spree.t(:my_account), spree.account_path %></li>
            <li><%= link_to Spree.t(:logout), spree.logout_path %></li>
            <% else %>
            <li id="link-to-login"><%= link_to Spree.t(:login), spree.login_path %></li>
            <% end %>
          </li>
        </ul>

        <figure id="logo" class="" data-hook>
          <%= link_to root_path do %>
          <%= image_tag 'logo/logo.png', alt: 'logo', class: "img-responsive center-block" %>
          <% end %>
        </figure>

  </div><!-- /.container-fluid -->
</nav>


<nav id="main-nav" class="navbar navbar-default">
  <div class="container-fluid">
    <!-- toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li id="home-link" data-hook><%= link_to 'home', main_app.root_path %></li>
        <li id="products-link" data-hook><%= link_to Spree.t(:products), spree.root_path %></li>
        <li id="webuy-link" data-hook><%= link_to 'we buy', main_app.webuy_path %></li>
        <li id="about-link" data-hook><%= link_to 'about', main_app.about_path %></li>
        <li id="contact-link" data-hook><%= link_to Spree.t(:contact), spree.new_contact_path %></li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li id="link-to-cart" data-hook>
          <%= link_to Spree.t(:cart), spree.cart_path %>
          <script>Spree.fetch_cart('<%= j spree.cart_link_url %>')</script>
        </li>
      </ul>  
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<script src="js/bootstrap.min.js"></script>
